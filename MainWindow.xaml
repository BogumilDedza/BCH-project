<Window x:Class="BCH_PROJEKT.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:BCH_PROJEKT"
        mc:Ignorable="d"
        Title="BCH" Height="600" Width="800" Background="#001F3F">

    <Window.Resources>
       
        <Style TargetType="TextBlock">
            <Setter Property="Foreground" Value="#F0F0F0"/>
            <Setter Property="FontSize" Value="16"/>
            <Setter Property="FontWeight" Value="Bold"/>
        </Style>

        <Style TargetType="Button">
            <Setter Property="Foreground" Value="#F0F0F0"/>
            <Setter Property="Background" Value="#FF6B6B"/>
            <Setter Property="BorderBrush" Value="#F0F0F0"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Padding" Value="6,2"/>
            <Setter Property="Margin" Value="5"/>
            <Setter Property="Cursor" Value="Hand"/>
        </Style>

        <Style TargetType="TextBox">
            <Setter Property="Foreground" Value="Black"/>
            <Setter Property="Background" Value="#F0F0F0"/>
            <Setter Property="Margin" Value="5"/>
            <Setter Property="FontWeight" Value="14"/>
        </Style>

        <Style TargetType="Border">

            <Setter Property="Background" Value="#002F5F"/>
            <Setter Property="BorderBrush" Value="#FF6B6B"/>
            <Setter Property="BorderThickness" Value="2"/>
            <Setter Property="CornerRadius" Value="12"/>
            <Setter Property="Padding" Value="10"/>

            <Setter Property="Effect">
                <Setter.Value>
                    <DropShadowEffect Color="Black" BlurRadius="10" ShadowDepth="2" Opacity="0.5"/>
                </Setter.Value>
            </Setter>
            <Setter Property="Margin" Value="10"/>
        </Style>
    </Window.Resources>
    
    
    <Grid Margin="20">

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <Grid Grid.Column="0">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!--Comand section-->
        <Border Grid.Row="0">
            <StackPanel >
                <TextBox Name="Box" Width="300" Height="30"/>
                <Button Content="Send command" Width="150"/>
            </StackPanel>
        </Border>

        <Border Grid.Row="1">
            <StackPanel Orientation="Vertical">
                
                    <StackPanel Orientation="Horizontal">
                        <TextBlock Text="BCH CODING" VerticalAlignment="Center" Margin="0,0,50,0"/>
                        <Button Content="YES" Width="50"  HorizontalAlignment="Left"/>
                        <Button Content="NO" Width="50" HorizontalAlignment="Right"/>
                    </StackPanel>
                    <Border Margin="0,10,0,0">
                    <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                        <TextBlock Text="TYPE OF CODING" VerticalAlignment="Center"/>
                        <Button Content="FAST" Width="60"/>
                        <Button Content="SLOW" Width="60"/>
                    </StackPanel>
                </Border>
            </StackPanel>
        </Border>

        <Border Grid.Row="2">
            <StackPanel Orientation="Vertical">
                <TextBlock Text="GENERATING RANDOM NOISE " Margin="0,0,0,10"/>
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                    <Button Content="YES" Width="60" Click="YES_button_Click"/>
                    <Button Content="NO" Width="60" Click="NO_button_Click"/>
                </StackPanel>

                <StackPanel Name="Option" Margin="0,10,0,0" Visibility="Collapsed">
                    <Button Content="GAUSIN NOISE" Width="250" Click="GaussianNoiseButton_Click"/>
                    <Button Content="BIT ERROR GENERATOR " Width="250" Click="BitErrorGeneratorButton_Click"/>
                </StackPanel>

                <StackPanel Name="BitError" Margin="0,2.5,0,0" Visibility="Collapsed">
                    <Button Content="GENERATE ERROR" Width="250" Click="GenerateErrorsButton_Click"/>
                </StackPanel>
            </StackPanel>
        </Border>
        </Grid>
    </Grid>
</Window>
